    body 
        block content
            .container
            -const pdr = {producto}
            console.log(pdr)
            h1(class="text-center")  'Productos Pug'
            table(class="table-primary table-bordered table-hover")
                thead
                    tr 
                        th 'Nombre'
                        th 'Precio'
                        th 'Imagen'
                tbody(class="table table-hover  text-align-center  vertical-align: middle ")
                    each p in pdr
                        tr(class="table-primary") 
                            td=  p.nombre
                            td=  p.price
                            td  
                                img(src=p.url, alt="foto", style="width:50px;height:50px;")
                    else
                        p=pdr
